@using Scolly.Services.Data.DTOs;
@model CityDto;

<h2>Добавяне на град</h2>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post" asp-action="Add" class="d-flex justify-content-center align-items-center flex-column" id="registerForm">
    <div class="form-group" style="width:500px">
        <label asp-for="Name">Град</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-lg btn-primary" style="width:400px; margin-top:30px;">Добавете град</button>
    <a asp-action="Index" asp-controller="City" class="btn btn-secondary" style="width:400px; margin-top:30px;">Връщане към списъка</a>
</form>

